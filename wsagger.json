{
   "wsagger": "0.0.2",
   "info": {
      "description": "API for GBK chat",
      "version": "1.0.0",
      "title": "GBKSOFT chat API"
   },
   "scenarios": [
       {
          "name": "connect to socket.io",
          "summary": " ",
          "parameters": [
             {             
                "in": "formData",
                "name": "namespace",
                "description": "connect to socket.io",
                "type": "string"
             }
          ],
          "operationId": "connect",
          "flow": [
             {
                "action": "connect", 
                "key": "socket.io", 
                "data": {"token": "@"}
             }
          ]
       },
       {
          "name": "sendBroadcastMessage",
          "summary": " ",
          "parameters": [
             { 
               "in": "formData",
               "name": "messageText",
               "description": "broadcast message text",
               "type": "string"
             }
          ],
          "condition": "connect",
          "operationId": "",
          "flow": [
             {
                "action": "request", 
                "key": "sendMessage", 
                "data": {"messageText": "@", "type": "broadcast"}
             }
          ]
       },
       {
          "name": "sendGroupMessage",
          "summary": " ",
          "parameters": [
             {
                "in": "formData",
                "name": "messageText",
                "description": "group message text",
                "type": "string"
             },
             {
                "in": "formData",
                "name": "groupId",
                "description": "group id",
                "type": "string"
             }
          ],
          "condition": "connect",
          "operationId": "",
          "flow": [
             {
                "action": "request", 
                "key": "changeGroup", 
                "data": {"groupId": "@"}
             },
             {
                "action": "request", 
                "key": "sendMessage", 
                "data": {"groupId": "@"}
             },
             {
                "action": "response", 
                "key": "message", 
                "data": {"messageText": "@", "groupId": "@"}
             }
          ]
       },
       {
          "name": "sendUserMessage",
          "summary": " ",
          "parameters": [
             {
                "in": "formData",
                "name": "messageText",
                "description": "user message text",
                "type": "string"
             },
             {
                "in": "formData",
                "name": "recipientId",
                "description": "recipient id",
                "type": "string"
             }
          ],
          "operationId": "",
          "condition": "connect",
          "flow": [
             {
                "action": "request", 
                "key": "sendMessage", 
                "data": {"messageText": "@", "type": "user", "recipientId": "@"}
             }
          ]
       }   
    ]
}

