{
  "wsagger": "0.0.3",

  "name": "test http connect (on status 200)",

  "parameters_": [
    {
      "name": "host",
      "description": "http host"
    },

    {
      "name": "path",
      "description": "http host path"
    }

  ],

  "functions" : {
    "isString": "(data) => { return typeof data === 'string'; }"
  },

  "data": [
  
    { 
      "action": "http_.request",
      "data": [
        
        "http",
        {
          "method": "GET", 
          "host"  : "{{host}}", 
          "port"  : 80, 
          "path"  : "{{path}}" 
        }
      ],          
   
      "expected": { "statusCode": 200, "status": "{{*isString}}" },
      "wait": {"delay": 5000} 
    }

  ]
}
