{
  "wsagger": "0.0.3",

  "name": "test socket.io-connect (on 'connectedTo')",

  "variants": {
    "server": {
       "localhost:10002":  { "host": "localhost",  "port": 100002,  "path": "/" },
       "localhost:10003":  { "host": "localhost",  "port": 100003,  "path": "/" }
    }
  },

  "parameters": [
    {
      "name": "server.host",
      "default": "localhost"
    },

    {
      "name": "server.port",
      "default": 10002
    },

    {
      "name": "server.path",
      "default": "/"
    }
  ],


  "data": [
  
    {
      "action": "socket_io.connect",           
      "data": { 
        "url": "http://{{server.host}}:{{server.port}}{{server.path}}"
      },
      "wait": {"delay": 3000},
      "expected": [[ "connectedTo", {}]]
    }

  ]
}
