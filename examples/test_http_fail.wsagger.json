{
  "wsagger": "0.0.3",

  "name": "test http connect (on status 200)",

  "variants"    : {
     "port": [
      "10002", 
      "10003"
    ]

  },

  "parameters": [
    {
      "name": "host",
      "description": "http host",
      "default": "abc.ru"
    },

    {
      "name": "path",
      "description": "http host path",
      "default": "/bad_path"
    }

  ],

  "functions" : {
    "isString": "(data) => (typeof data === 'string')"
  },

  "data": [
  
    { 
      "action": "http_.request",
      "data": [
        
        "http",
        {
          "method": "GET", 
          "host"  : "{{host}}", 
          "port"  : 80, 
          "path"  : "{{path}}" 
        }
      ],          
   
      "expected": { "statusCode": 404 },
      "wait": {"delay": 5000} 
    }

  ]
}
