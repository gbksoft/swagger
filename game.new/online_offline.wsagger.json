  "scenarios": [
    {
      "name": "connect to socket.io with token/CID",
      "parameters": [
      ],
          
      "data": [
        {
          "action"  : "load.loadJSON",
          "wait"    : { "delay": 3000 }, 
          "data"    : "login_CID.wsagger.json", 
          "expected": { "login_CID": "{{!login_CID}}" }
        },

        { 
          "action"  : "call.callWsagger",
          "wait"    : { "delay": 30000 }, 
          "data"    : "{{login_CID}}",
          "expected": { "doer.socket_io" : {} },
          "dataOut" : { "doer.socket_io" : "{{doer.socket_io}}" }
        },

        {
          "action"  : "socket_io.emit",
          "data"    : ["getUsersOnline", { "type": "facebook" }],
          "wait"    : { "delay": 3000 },
          "expected": [[ "usersOnline", { "type": "facebook", "userIds": "{{!facebookFriends}}" } ]]
        },

        {
          "action": "socket_io.expect",
          "expected": [[ "usersOnline", {} ], [ "usersOffline", {} ]],
          "wait": { "delay": 30000 }
        }

      ]
    }
  ]  
